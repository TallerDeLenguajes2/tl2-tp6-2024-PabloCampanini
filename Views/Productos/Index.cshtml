@{
    ViewData["Title"] = "Productos";
}
@model IEnumerable<Productos>

<section>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Precio</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <th scope="row">@producto.IdProducto</th>
                    <td colspan="2">@producto.Descripcion</td>
                    <td>$ @producto.Precio</td>
                    <td>
                        <a class="btn btn-primary" role="button" asp-area="" asp-controller="Productos"
                            asp-action="ModificarProducto" asp-route-idBuscado="@producto.IdProducto">Modificar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" role="button" asp-area="" asp-controller="Productos"
                            asp-action="EliminarProducto" asp-route-idProducto="@producto.IdProducto">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>