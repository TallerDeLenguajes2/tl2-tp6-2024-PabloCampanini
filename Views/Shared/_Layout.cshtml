<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tl2_tp6_2024_PabloCampanini</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tl2_tp6_2024_PabloCampanini.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="BotonProductos" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Productos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="BotonProductos">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Productos"
                                        asp-action="Index">Listar Productos</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Productos"
                                        asp-action="CrearProducto">Crear Producto</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="BotonPresupuestos" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Presupuestos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="BotonPresupuestos">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Presupuestos"
                                        asp-action="Index">Presupuestos</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Presupuestos"
                                        asp-action="CargarPresupuesto">Cargar Presupuesto</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Presupuestos"
                                        asp-action="ModificarPresupuesto">Modificar Presupuesto</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Presupuestos"
                                        asp-action="EliminarPresupuesto">Eliminar Presupuesto</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="BotonClientes" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Clientes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="BotonClientes">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Clientes"
                                        asp-action="Index">Clientes</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Clientes"
                                        asp-action="CargarCliente">Cargar Cliente</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - tl2_tp6_2024_PabloCampanini - <a asp-area="" asp-controller="Home"
                asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
