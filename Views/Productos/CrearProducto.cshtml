@{
    ViewData["Title"] = "Crear Producto";
}

@model Productos

@section Scripts{<partial name="_ValidationScriptsPartial"/>}

<section>
    <form asp-controller="Productos" asp-action="CrearProducto" method="post">
        <section class="form-group">
            <label asp-for="@Model.Descripcion"></label>
            <input asp-for="@Model.Descripcion" class="form-control" />
        </section>

        <section class="form-group">
            <label asp-for="@Model.Precio"></label>
            <input asp-for="@Model.Precio" class="form-control" />
        </section>
        <button type="submit" class="btn btn-primary my-3">Cargar producto</button>
    </form>
</section>